{
  "name": "@orioro/validate",
  "version": "0.0.0-semantic-release",
  "description": "Utility methods to validate and generate validations expressions. Based on `@orioro/expression`.",
  "keywords": [
    "validation",
    "expression"
  ],
  "homepage": "https://github.com/orioro/node-validate",
  "bugs": "https://github.com/orioro/node-validate/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/orioro/node-validate.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "test": "jest --coverage",
    "dev": "jest --watch",
    "dev:readme": "readme --watch",
    "build": "rm -rf dist && rollup --config ./rollup/build.config.js && yarn tsc:declaration",
    "prepare": "yarn build && readme",
    "readme": "readme",
    "update-dependencies": "npx npm-check-updates -u",
    "tsc:declaration": "tsc --declaration --emitDeclarationOnly --declarationDir dist",
    "tsc:validate": "tsc --noEmit",
    "commit": "cz",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier src --check",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "prettier": "prettier src",
    "ci-check": "yarn test && yarn tsc:validate && yarn lint"
  },
  "author": "Simon Fan <simon@orioro.design>",
  "license": "ISC",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@orioro/readme": "^1.0.1",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.38.4",
    "semantic-release": "^17.3.7",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@orioro/expression": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
